<?xml version="1.0"?>
<SyntaxDefinition xmlns="http://icsharpcode.net/sharpdevelop/syntaxdefinition/2008">
	<Color name="Comment" foreground="#428BDD" />
	<Color name="String" foreground="#E2CE00" />
	<Color name="Keyword" foreground="#8AA6C1" />
	<Color name="Number" foreground="#EDDD5A" />
	<Color name="Constant" foreground="#8AA6C1" />
	<Color name="Symbol" foreground="#80D500" />
	<Color name="Type" foreground="#80D500" />
	<Color name="RegEx" foreground="#CA4344" />
	
	<!-- This is the main ruleset. -->
	<RuleSet>
		<Span color="Comment" begin="#" />
		
		<Span color="String" begin='"' end='"' />
		<Span color="String" begin="'" end="'" />
		
		<Keywords fontWeight="bold" color="Keyword">
			<Word>alias</Word>
			<Word>and</Word>
			<Word>BEGIN</Word>
			<Word>begin</Word>
			<Word>break</Word>
			<Word>case</Word>
			<Word>class</Word>
			<Word>def</Word>
			<Word>defined?</Word>
			<Word>do</Word>
			<Word>else</Word>
			<Word>elseif</Word>
			<Word>END</Word>
			<Word>end</Word>
			<Word>ensure</Word>
			<Word>false</Word>
			<Word>for</Word>
			<Word>if</Word>
			<Word>in</Word>
			<Word>module</Word>
			<Word>next</Word>
			<Word>nil</Word>
			<Word>not</Word>
			<Word>or</Word>
			<Word>redo</Word>
			<Word>rescue</Word>
			<Word>retry</Word>
			<Word>return</Word>
			<Word>self</Word>
			<Word>then</Word>
			<Word>true</Word>
			<Word>undef</Word>
			<Word>unless</Word>
			<Word>until</Word>
			<Word>when</Word>
			<Word>while</Word>
			<Word>yeild</Word>
		</Keywords>
		
		<Rule color="Number">\d+(\.[0-9]+)?</Rule>
		<Rule color="Constant">([A-Z])([A-Z]|_|[0-9])*</Rule>
		<Rule color="Symbol">\:([a-z])([a-z]|[A-Z]|_|[0-9])*</Rule>
		
		<Span color="RegEx" begin="/" end="/" />
	</RuleSet>
</SyntaxDefinition>