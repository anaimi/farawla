<Window x:Class="Farawla.Features.Projects.ModalInputBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="125" Width="400" 
    Background="#44606060" Title="Title" ResizeMode="NoResize" WindowStyle="None" SnapsToDevicePixels="True" WindowStartupLocation="CenterScreen">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="60" />
			<RowDefinition Height="60" />
		</Grid.RowDefinitions>
		
		<StackPanel Grid.Row="0">
			<TextBlock x:Name="DescriptionPrimary" FontWeight="Bold" FontSize="25" Margin="10,10,0,0" Foreground="#88FFFFFF">Hello!</TextBlock>
			<TextBlock x:Name="DescriptionSecondary" FontWeight="Bold" FontSize="10" Margin="10,0,0,0" Foreground="#EEFFFFFF">Hello!</TextBlock>
		</StackPanel>
		
		<TextBox x:Name="Input" Grid.Row="1" FontWeight="Bold" FontSize="25" Margin="10" Foreground="#444444" BorderBrush="#444444" BorderThickness="1">Hi</TextBox>
	</Grid>
</Window>
