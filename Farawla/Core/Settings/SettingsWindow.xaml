<Window x:Class="Farawla.Features.Settings.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Settings" Background="Transparent"
    Height="330" Width="500"
    WindowStyle="None" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
	<Window.Resources>
		<Style TargetType="{x:Type TextBlock}">
			<Setter Property="Foreground" Value="White" />
		</Style>

		<Style TargetType="{x:Type Button}" x:Key="BlueButton">
			<Setter Property="Cursor" Value="Hand" />
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="{x:Type Button}">
						<Grid x:Name="Grid" SnapsToDevicePixels="True">
							<Border x:Name="Background" CornerRadius="3">
								<Border.Background>
									<LinearGradientBrush StartPoint="0.5, 0.0" EndPoint="0.5, 1">
										<GradientStop Color="#FF346EB6" Offset="0.5" />
										<GradientStop Color="#FF1d5F88" Offset="1" />
									</LinearGradientBrush>
								</Border.Background>
								<Border.Effect>
									<DropShadowEffect BlurRadius="20" />
								</Border.Effect>
							</Border>
							<ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" RecognizesAccessKey="True" />
							<Border x:Name="FocusVisualElement" IsHitTestVisible="false" BorderBrush="{StaticResource HoverShineBrush}" BorderThickness="1" CornerRadius="3,3,3,3" Margin="1,1,1,1" Opacity="0" />
							<TextBlock Foreground="White" Width="{TemplateBinding Width}" TextAlignment="Center" Padding="0,6.5,0,0" Text="{TemplateBinding Content}" />
						</Grid>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="true">
								<Setter Property="Opacity" TargetName="Grid" Value="0.5" />
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
	</Window.Resources>
	
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="250" />
			<RowDefinition Height="50" />
		</Grid.RowDefinitions>
		
		<TabControl Grid.Row="0">
			<TabControl.Resources>
				<Style TargetType="{x:Type TabPanel}">
					<Setter Property="HorizontalAlignment" Value="Center" />
				</Style>

				<Style TargetType="{x:Type TabControl}">
					<Setter Property="Background" Value="#FF606060" />
					<Setter Property="BorderThickness" Value="0" />
				</Style>

				<Style TargetType="{x:Type TabItem}">
					<Setter Property="Background" Value="#FF606060" />
					<Setter Property="Template">
						<Setter.Value>
							<ControlTemplate TargetType="{x:Type TabItem}">
								<Grid x:Name="Grid" SnapsToDevicePixels="True" Margin="10,5,10,5" Cursor="Hand">
									<Grid.RowDefinitions>
										<RowDefinition />
										<RowDefinition />
									</Grid.RowDefinitions>
									<TextBlock x:Name="Title" Foreground="White" Text="{TemplateBinding Header}" Grid.Row="0">
										<TextBlock.Effect>
											<DropShadowEffect x:Name="TextBoxShadow" Color="White" BlurRadius="20" />
										</TextBlock.Effect>
									</TextBlock>
									<Rectangle StrokeDashArray="2" Stroke="#FF606060" Height="1" StrokeThickness="0,0,0,1" HorizontalAlignment="Stretch" Grid.Row="1" />
								</Grid>
								<ControlTemplate.Triggers>
									<Trigger Property="IsMouseOver" Value="True">
										<Setter Property="BitmapEffect">
											<Setter.Value>
												<OuterGlowBitmapEffect GlowColor="White" GlowSize="1" Opacity="0.5" />
											</Setter.Value>
										</Setter>
									</Trigger>
								</ControlTemplate.Triggers>
							</ControlTemplate>
						</Setter.Value>
					</Setter>
				</Style>
			</TabControl.Resources>
			
			<TabItem Header="General">
				<Grid>
					<TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">not implemented yet</TextBlock>
				</Grid>
			</TabItem>
			
			<TabItem Header="About">
				<StackPanel>
					<TextBlock>Farawla v0.0</TextBlock>
					<TextBlock>By Ahmad Al-Naimi (ANaimi)</TextBlock>
					<TextBlock>http://www.anaimi.com</TextBlock>
				</StackPanel>
			</TabItem>
		</TabControl>
		
		<StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
			<Button Width="100" Height="30" Content="Save" Style="{StaticResource BlueButton}" />
		</StackPanel>
	</Grid>
</Window>
