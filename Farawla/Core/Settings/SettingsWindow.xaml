<Window x:Class="Farawla.Core.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Core="clr-namespace:Farawla.Core"
    x:Name="CurrentSettingsWindow" Title="Settings"
    Height="330" Width="500"
    Background="Transparent" AllowsTransparency="True"
    WindowStyle="None" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
	<Window.Resources>
		<Style TargetType="{x:Type TextBlock}">
			<Setter Property="Foreground" Value="{Binding Converter={Core:ThemeColorConverter},ConverterParameter='TextWidgetColor'}" />
		</Style>
		
		<Style TargetType="GroupBox">
			<Setter Property="Foreground" Value="{Binding Converter={Core:ThemeColorConverter},ConverterParameter='TextWidgetColor'}" />
			<Setter Property="Margin" Value="-5,0,0,10" />
			<Setter Property="Padding" Value="20,0,0,0" />
			<Setter Property="BorderThickness" Value="0" />
		</Style>
	</Window.Resources>
	
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="250" />
			<RowDefinition Height="50" />
		</Grid.RowDefinitions>
		
		<TabControl Grid.Row="0">
			<TabControl.Resources>
				<Style TargetType="{x:Type TabPanel}">
					<Setter Property="HorizontalAlignment" Value="Center" />
				</Style>

				<Style TargetType="{x:Type TabControl}">
					<Setter Property="Background" Value="{Binding Converter={Core:ThemeColorConverter},ConverterParameter='PrimaryWidgetColor'}" />
					<Setter Property="BorderThickness" Value="0" />
					
					<Setter Property="Template">
						<Setter.Value>
							<ControlTemplate TargetType="{x:Type TabControl}">
								<Grid>
									<Grid.RowDefinitions>
										<RowDefinition Height="Auto"/>
										<RowDefinition Height="*"/>
									</Grid.RowDefinitions>
									
									<TabPanel Name="HeaderPanel" Grid.Row="0" Panel.ZIndex="1"  Margin="0,0,4,-1" IsItemsHost="True" KeyboardNavigation.TabIndex="1" Background="Transparent" />
									<Border Grid.Row="1" Background="{Binding Converter={Core:ThemeColorConverter},ConverterParameter='PrimaryWidgetColor'}">
										<Border Padding="10"  Background="{Binding Converter={Core:ThemeColorConverter},ConverterParameter='PrimaryWidgetColor'}">
											<ContentPresenter Name="PART_SelectedContentHost" ContentSource="SelectedContent" />
										</Border>
									</Border>
								</Grid>
							</ControlTemplate>
						</Setter.Value>
					</Setter>
				</Style>

				<Style TargetType="{x:Type TabItem}">
					<Setter Property="Template">
						<Setter.Value>
							<ControlTemplate TargetType="{x:Type TabItem}">
								<Border x:Name="TitleBorder" Margin="0,0,25,5" Padding="0" BorderBrush="{Binding Converter={Core:ThemeColorConverter},ConverterParameter='SecondaryWidgetColor'}" BorderThickness="0,0,0,1" Background="#01FFFFFF" Cursor="Hand">
									<TextBlock x:Name="Title" Foreground="Orange" Text="{TemplateBinding Header}" Height="15" />
								</Border>
								<ControlTemplate.Triggers>
									<Trigger Property="IsMouseOver" Value="True">
										<!--<Setter TargetName="TitleBorder" Property="BorderBrush" Value="{Binding Converter={Core:ThemeColorConverter},ConverterParameter='PrimaryWidgetColor'}" />-->
									</Trigger>
								</ControlTemplate.Triggers>
							</ControlTemplate>
						</Setter.Value>
					</Setter>
				</Style>
			</TabControl.Resources>

			<TabItem Header="General">
				<StackPanel>
					<GroupBox Header="Editor">
						<StackPanel>
							<CheckBox Content="Show tabs" IsChecked="{Binding ElementName=CurrentSettingsWindow, Path=Settings.ShowTabsInEditor}" Click="ShowTabsAndSpacesChanged" />
							<CheckBox Content="Show spaces" IsChecked="{Binding ElementName=CurrentSettingsWindow, Path=Settings.ShowSpacesInEditor}" Click="ShowTabsAndSpacesChanged" />
						</StackPanel>
					</GroupBox>

					<GroupBox Header="Project Manager">
						<StackPanel>
							<CheckBox Content="Show files with names starting with a dot" IsChecked="{Binding ElementName=CurrentSettingsWindow, Path=Settings.ShowFilesStartingWithDot}" Click="ShowFilesStartingWithDotChanged"  />
						</StackPanel>
					</GroupBox>
					
					<GroupBox Header="Theme">
						<StackPanel Orientation="Horizontal">
							<ComboBox x:Name="cbThemes" Width="200" HorizontalAlignment="Left" /> <TextBlock HorizontalAlignment="Left" Margin="20,0,0,0">requires a restart.</TextBlock>
						</StackPanel>
					</GroupBox>
				</StackPanel>
			</TabItem>
			
			<TabItem Header="Hooks">
				<StackPanel>
					<GroupBox Header="Enable hooks for">
						<StackPanel>
							<CheckBox Content="On file open" />
							<CheckBox Content="On file close" />
							<CheckBox Content="On file save" />
							<CheckBox Content="On project open" />
							<CheckBox Content="On project close" />
						</StackPanel>
					</GroupBox>
				</StackPanel>
			</TabItem>

			<TabItem Header="About">
				<StackPanel>
					<TextBlock>Farawla v0.0</TextBlock>
					<TextBlock>By Ahmad Al-Naimi (ANaimi)</TextBlock>
					<TextBlock>http://www.anaimi.com</TextBlock>
				</StackPanel>
			</TabItem>
		</TabControl>
		
		<StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
			<Button Width="100" Height="30" Content="Save" Click="SaveButtonClicked" Style="{StaticResource BlueButton}" />
		</StackPanel>
	</Grid>
</Window>
