<UserControl x:Class="Farawla.Core.Sidebar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:FileExplorer="clr-namespace:Farawla.Features.FileExplorer"
    xmlns:ColorPicker="clr-namespace:Farawla.Features.ColorPicker"
    >
	<Border Background="#66666666" Padding="5" CornerRadius="4">
		<StackPanel VerticalAlignment="Stretch" Name="SidebarContainer">
			<FileExplorer:Widget x:Name="FileExplorer" MaxHeight="{Binding ElementName=SidebarContainer, Path=ActualHeight}" />
			<ColorPicker:Widget x:Name="ColorPicker" Height="300" />
		</StackPanel>
	</Border>
</UserControl>
